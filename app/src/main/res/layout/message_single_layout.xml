<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:id="@+id/message_single_layout"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/proimg"
        android:id="@+id/chat_user_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chat_user_image"
        android:id="@+id/chat_user_message"
        android:text="Hello guys."
        android:layout_marginTop="8dp"
        android:textColor="#fff"
        android:textSize="15dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/message_text_background"
        android:layout_marginStart="10dp"
        />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/chat_message_image"
        android:scaleType="centerCrop"
        android:layout_toRightOf="@+id/chat_user_image"
        />


</RelativeLayout>