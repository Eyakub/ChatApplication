<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.user.chatapplication.SettingsActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/proimg"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="20dp"
        android:text="Android jellybean"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_status"
        android:layout_below="@+id/profile_name"
        android:layout_marginTop="10dp"
        android:text="@string/hey_there_i_m_using_android_chat_application"
        android:textColor="#ffff"
        android:textSize="12dp"
        android:gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="#fff"
        android:padding="22dp"
        android:id="@+id/change_p_btn"
        android:text="change image"
        android:layout_below="@+id/profile_status"
        android:layout_alignEnd="@+id/profile_image" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:backgroundTint="@color/colorAccent"
        android:id="@+id/change_status_btn"
        android:textColor="@color/colorPrimary"
        android:text="change status"
        android:layout_below="@+id/change_p_btn"
        android:layout_alignStart="@+id/change_p_btn" />

</RelativeLayout>
